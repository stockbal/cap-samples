<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:macros="sap.fe.macros">
	<VBox id="_IDGenVBox1"
		height="100%"
		core:require="{ handler: 'com/appreq/apprequests/ext/fragment/Conversations'}">
		<FeedInput id="_IDGenFeedInput"
			post="handler.onPost"
			visible="{= ${HasActiveEntity} || ${IsActiveEntity}}"></FeedInput>
		<Panel id="_IDGenPanel"
			stickyHeader="true"
			height="auto"
			headerText="Feed">
			<List id="_IDGenList"
				showSeparators="Inner"
				growingScrollToLoad="true"
				items="{ path: 'conversations', sorter: {descending: true, path: 'createdAt'} }">
				<FeedListItem id="_IDGenFeedListItem"
					sender="{createdBy}"
					senderActive="false"
					timestamp="{createdAt}"
					text="{content}"
					convertLinksToAnchorTags="All"/>
			</List>
		</Panel>
	</VBox>
</core:FragmentDefinition>