<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:macros="sap.fe.macros">
	<VBox id="_IDGenVBox1"
		height="100%"
		core:require="{ handler: 'com/appreq/apprequests/ext/fragment/Conversations'}">
		<FeedInput id="_IDGenFeedInput"
			post="handler.onPost"
			visible="{= ${HasActiveEntity} || ${IsActiveEntity}}"></FeedInput>
		<Panel id="_IDGenPanel"
			stickyHeader="true"
			height="auto">
			<headerToolbar>
				<OverflowToolbar id="_IDGenOverflowToolbar1"
					style="Clear">
					<Title id="_IDGenTitle"
						text="Feed" />
					<ToolbarSpacer id="_IDGenToolbarSpacer" />
					<Button id="_IDGenButton1"
						tooltip="Refresh"
						press="handler.onFeedRefresh"
						icon="sap-icon://refresh" />
				</OverflowToolbar>
			</headerToolbar>
			<List id="_IDGenList"
				showSeparators="Inner"
				growing="true"
				growingScrollToLoad="true">
			</List>
		</Panel>
	</VBox>
</core:FragmentDefinition>