{
  "name": "websockets",
  "version": "1.0.0",
  "description": "CAP Project with websockets",
  "repository": "https://github.com/stockbal/cap-samples",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@cap-js-community/websocket": "^1.3.0",
    "@sap/cds": "^8",
    "express": "^4",
    "@sap/xssec": "^4",
    "@cap-js/hana": "^1"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.27",
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@types/node": "^20",
    "cds-plugin-ui5": "^0.6.13",
    "eslint": "^8.57.1",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds-ts w",
    "watch:mocked": "cds-ts w --profile mocked",
    "undeploy": "cf undeploy cap-samples --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa",
        "db": "hana"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/app-requests"
  ]
}
